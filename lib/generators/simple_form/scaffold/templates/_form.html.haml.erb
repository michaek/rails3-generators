= simple_form_for @<%= file_name %>, :url => <%= file_name %>.new_record? ? collection_path : resource_path do |form|
  = render :partial => 'shared/form_errors', :locals => {:form_object => @project}

<%- for attribute in attributes -%>
  = form.input :<%= attribute.name %>, :label => '<%= attribute.name.titleize %>'
<%- end -%>

  .actions
    = form.button :submit